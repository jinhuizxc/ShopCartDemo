<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parenttView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/tv_item_shopcart_clothselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:drawableLeft="@drawable/common_check_selector"
            android:drawablePadding="5dp"
            android:padding="15dp"
            android:text="" />


        <ImageView
            android:id="@+id/iv_item_shopcart_cloth_pic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/log_img"
            android:layout_margin="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_shopcart_clothname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="穿秋装情侣字母徽章风衣" />

            <TextView
                android:id="@+id/tv_shopping_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="¥185"
                android:textColor="@color/main_red_text"
                android:textSize="15sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_goods_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/butt_style_points"
                    android:padding="5dp"
                    android:paddingRight="5dp"
                    android:text="0积分"
                    android:textColor="#95D4FB" />

                <!--数量-->
                <LinearLayout
                    android:id="@+id/rl_edit"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/goods_add_delete"
                    android:gravity="center_horizontal">
                    <!--减-->
                    <TextView
                        android:id="@+id/iv_item_shopcart_cloth_minus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" - "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#F0EEF4" />
                    <!--数量-->
                    <TextView
                        android:id="@+id/et_item_shopcart_cloth_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#000" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#F0EEF4" />
                    <!--加-->
                    <TextView
                        android:id="@+id/iv_item_shopcart_cloth_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" + "
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/splitline_color"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_item_shopcart_cloth_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/shopcart_delete"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>